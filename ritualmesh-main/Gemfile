# Gemfile
source 'https://rubygems.org'

gem 'bindata'           # For binary struct packing like __PACKED__
gem 'openssl'           # For cryptographic hashing/signing
gem 'eventmachine'      # Async networking
gem 'ipaddr'            # IP object manipulation
gem 'digest-crc'        # CRC16/32 for QSPN integrity

